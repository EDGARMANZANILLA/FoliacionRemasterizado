@{
    ViewBag.Icono = "fas fa-exclamation-triangle";
    ViewBag.Title = "Incidencias";


}

<seccion class="card col-12 offset-md-2 col-md-7" style="box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);">

  

    <div class="margenSection row" style="margin-bottom: 60px; ">


        <div class="btn-block">
            <h5 class="text-center">Seleccione la opcion deseada:</h5>
        </div>

        <div class="col-12 col-md-6  btn-block">
            <a type="button" class="btn btn-primary btn-lg  btn-block" href="@Url.Action("Inhabilitar", "Inventario", new  { NombreBanco = ViewBag.NombreBancoSeleccionado })">Inhabilitar</a>

        </div>

        <div class="col-12 col-md-6  btn-block">
            <a type="button" class="btn btn-primary btn-lg  btn-block"  href="@Url.Action("Asignar", "Inventario", new { NombreBanco = ViewBag.NombreBancoSeleccionado })" title="Realizar un ajuste al inventario">Asignar</a>

        </div>

    </div>

</seccion>

