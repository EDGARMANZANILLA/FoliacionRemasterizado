                    cache: false,
                    async: true,
                    type: "GET",
                    url: laURLDeLaVista,
                    data: {},
                    success: function (response) {
                        $('#RenderVistaParcial').html('');
                        $('#RenderVistaParcial').html(response);
                    }
                });




            }
        );



